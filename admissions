  <script>
    // Get references to the sections
    const admissionsFormsSection = document.getElementById('admissions-forms-section');
    const thankYouMessageSection = document.getElementById('thank-you-message-section');

    // Get references to the forms
    const ugForm = document.getElementById('ug-form');
    const pgForm = document.getElementById('pg-form');

    // Function to handle form submission
    function handleFormSubmission(event) {
        event.preventDefault(); // Prevent default form submission (which would try to send to a server)

        // You can collect form data here if needed, but it won't be sent anywhere.
        // For example:
        // const formData = new FormData(event.target);
        // console.log("Form submitted data:", Object.fromEntries(formData.entries()));

        // Hide the forms section
        admissionsFormsSection.style.display = 'none';

        // Show the thank you message section
        thankYouMessageSection.style.display = 'flex'; // Use 'flex' because of align-items/justify-content for centering

        // Scroll to the top of the page for a better user experience
        window.scrollTo(0, 0);
    }

    // Add event listeners for form submissions
    ugForm.addEventListener('submit', handleFormSubmission);
    pgForm.addEventListener('submit', handleFormSubmission);
  </script>
