  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

  <script>
    gsap.registerPlugin(ScrollTrigger);

    gsap.utils.toArray('.reveal').forEach(el => {
      gsap.fromTo(el,
        { y: 100, opacity: 0 },
        {
          y: 0,
          opacity: 1,
          duration: 1,
          ease: 'power2.out',
          scrollTrigger: {
            trigger: el,
            start: 'top 80%',
            toggleActions: 'play none none reverse'
          }
        });
    });

    gsap.fromTo(".zoom-img",
      { scale: 0.8, opacity: 0 },
      {
        scale: 1.3,
        opacity: 1,
        ease: "power2.out",
        scrollTrigger: {
          trigger: ".pin-section",
          start: "top top",
          end: "+=2000",
          scrub: true,
          pin: true,
          anticipatePin: 1
        }
      });

    gsap.fromTo(".video-text",
      { opacity: 0, y: 50 },
      {
        opacity: 1,
        y: 0,
        duration: 2,
        ease: "power2.out",
        scrollTrigger: {
          trigger: ".video-section",
          start: "top 80%",
          toggleActions: "play none none reverse"
        }
      });

    gsap.utils.toArray(".bg-scroll-section").forEach(section => {
      gsap.fromTo(section,
        { backgroundSize: "120%" },
        {
          backgroundSize: "100%",
          scrollTrigger: {
            trigger: section,
            start: "top bottom",
            end: "bottom top",
            scrub: true
          }
        });

      const text = section.querySelector(".bg-scroll-text");
      gsap.fromTo(text,
        { opacity: 0, y: 50 },
        {
          opacity: 1,
          y: 0,
          duration: 1.2,
          ease: "power2.out",
          scrollTrigger: {
            trigger: section,
            start: "top 70%",
            toggleActions: "play none none reverse"
          }
        });
    });

    ScrollTrigger.create({
      trigger: ".pin-section",
      start: "top top",
      end: "+=2000",
      onLeave: () => {
        document.querySelector(".header-img-wrapper").style.transform = "translateY(0)";
        document.querySelector(".header-img-wrapper").style.opacity = "1";
      },
      onEnterBack: () => {
        document.querySelector(".header-img-wrapper").style.transform = "translateY(-100%)";
        document.querySelector(".header-img-wrapper").style.opacity = "0";
      }
    });
  </script>
</body>
